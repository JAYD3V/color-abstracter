{
   "$schema": "https://json.schemastore.org/tsconfig",
   "extends": "@tsconfig/node16-strictest/tsconfig.json",

   "include": ["src/**/*"],
   "exclude": [ "node_modules/", "types/", "dist/", ".D3V/" ],

   "compilerOptions": {
      "lib": ["ES2022"],
      "outDir": "dist/",
      "rootDir": "src/",
      "declarationDir": "types/",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "plugins": [{ "name": "typescript-eslint-language-service" }]
   }
}
