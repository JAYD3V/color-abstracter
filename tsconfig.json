{
   "$schema": "https://json.schemastore.org/tsconfig",
   "extends": "@tsconfig/node16-strictest/tsconfig.json",

   "include": ["src/**/*", "test/**/*", "dist/lib/hsvToRgb-Assertion.ts"],
   "exclude": [ "node_modules/", "types/", "dist/", ".D3V/" ],

   "compilerOptions": {
      "lib": ["ES2022"],
      "outDir": "dist/",
      "rootDirs": ["src/", "test/"],
      "declarationDir": "types/",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      // The checks below can be preformed by ESLint &/or TSC
      "noUnusedLocals": false,
      "noUnusedParameters": false
   }
}
